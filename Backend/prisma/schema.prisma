generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum ReportStatus {
  open
  in_progress
  resolved
  closed
}

enum VoteType{
  upvote
  downvote
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  password      String
  username      String
  phoneNo       String
  role          Role           @default(USER)
  createdAt     DateTime       @default(now())
  reports       Report[]       @relation("UserReports")
  votes         Votes[]
  sessions      Session[]
}

model Report {
  id               String         @id @default(cuid())
  description      String
  type             String
  status           ReportStatus   @default(open)
  isMocked         Boolean        @default(false)
  accuracy         Float?
  userConfirmed    Boolean        @default(false)
  remarks          String[]
  streetName       String?
  streetNumber     String?
  city             String?
  region           String?
  isoCountryCode   String?
  postalCode       String?
  formattedAddress String?
  latitude         Float
  longtitude       Float
  beforeImage      String
  afterImage       String?
  createdAt        DateTime       @default(now())
  resolvedAt       DateTime?
  userId           String
  user             User           @relation("UserReports", fields: [userId], references: [id])
  votes            Votes[]
}

model Votes {
  id       String @id @default(cuid())
  type     VoteType
  userId   String
  user     User   @relation(fields: [userId], references: [id])
  reportId String
  report   Report @relation(fields: [reportId], references: [id])

  @@unique([reportId, userId])
}

model Session{
  id        String  @id @default(cuid())
  token     String  @unique
  userId    String
  user      User    @relation(fields:[userId],references:[id],onDelete:Cascade)
  ipAddress String? 
  replacedBy  String?
  revoked   Boolean   @default(false)
  createdAt DateTime  @default(now())
  expiresAt DateTime
}